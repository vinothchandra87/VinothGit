package rules
dialect "mvel";


import com.copart.Entity.*;
import com.copart.Controller.*;

rule "Scrap-positive"
 when
 		
        $BidControl:BidsEligiblityController(currentLot.documentType=="scrap")
        BidsEligiblityController(currentMember.country=="spain") 
        BidsEligiblityController($allLicenses:allMemberLicenses)
        $BidControl.currentMemberLicense(licenseType=="iaedismantler") from $allLicenses
    then
        $BidControl.memberElgibility=true;
        update($BidControl)
     
end


